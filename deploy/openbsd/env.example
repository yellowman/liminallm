# LiminalLM OpenBSD Environment Configuration
# Place in /etc/liminallm/env
# chmod 640 /etc/liminallm/env
# chown root:_liminallm /etc/liminallm/env

# =============================================================================
# REQUIRED - Database (PostgreSQL with pgvector)
# =============================================================================
DATABASE_URL="postgresql://liminallm:password@localhost/liminallm"

# =============================================================================
# REQUIRED - Redis
# =============================================================================
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# REQUIRED - OpenAI API
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"

# =============================================================================
# Storage
# =============================================================================
SHARED_FS_ROOT="/var/liminallm"

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_BACKEND="openai"
ADAPTER_SERVER_MODEL="gpt-4o"
EMBEDDING_MODEL_ID="text-embedding-3-small"

# =============================================================================
# Authentication
# =============================================================================
# JWT_SECRET will be auto-generated if not set
# JWT_SECRET="your-64-char-secret"
JWT_ISSUER="liminallm"
JWT_AUDIENCE="liminal-clients"
ACCESS_TOKEN_TTL_MINUTES="30"
REFRESH_TOKEN_TTL_MINUTES="1440"
ENABLE_MFA="true"

# =============================================================================
# Email (optional)
# =============================================================================
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="noreply@example.com"
# SMTP_PASSWORD="password"
# SMTP_USE_TLS="true"
# EMAIL_FROM_ADDRESS="noreply@example.com"
# EMAIL_FROM_NAME="LiminalLM"
APP_BASE_URL="https://liminallm.example.com"

# =============================================================================
# Rate Limits
# =============================================================================
CHAT_RATE_LIMIT_PER_MINUTE="60"
RESET_RATE_LIMIT_PER_MINUTE="5"
